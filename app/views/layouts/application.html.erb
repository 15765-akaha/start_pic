<!DOCTYPE html>
<html>
  <head>
    <title>StartPic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header class="header">

 <nav class="navbar navbar-expand-lg navbar-dark ">
  <div class="container">

    <%= link_to "StartPic", root_path, class: "navbar-brand" %>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

    <% if admin_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "TOP", admins_root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "テーマ作成", admins_themes_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザー一覧", admins_user_dates_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿画像一覧", admins_post_images_path, class: "nav-link" %>
        </li>                 
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           管理者ログイン
         </a>
         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <%= link_to "画像一覧(ユーザー）", post_images_path, class: "dropdown-item" %>
           <%= link_to "テーマ一覧(ユーザー）", themes_path, class:"dropdown-item" %>
           
           <div class="dropdown-divider"></div>
           <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "dropdown-item" %>
         </div>
        </li>
      </ul>

    <% elsif user_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Images", post_images_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Themas", themes_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿", new_post_image_path, class: "nav-link" %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <%= attachment_image_tag current_user, :profile_image, :fill,50,50, fallback: 'no_image.png', size: '50x50', class: "rounded-circle" %>&nbsp&nbsp<%= current_user.name %>
         </a>
         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <%= link_to "Mypage", user_path(current_user), class: "dropdown-item" %>
           <%= link_to "Edit", edit_user_path(current_user), class:"dropdown-item" %>
           
           <div class="dropdown-divider"></div>
           <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
         </div>
        </li>
      </ul>

    <% else %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Images", post_images_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Themes", themes_path, class: "nav-link" %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Account", new_user_registration_path, class: "nav-link" %>
        </li>        
      </ul>
    <% end %>

    </div>
  </div>
</nav>

   <%= yield %>
   
  <footer class="footer">
    <div class="container text-right mt-3">
      <p>© 2020 Ryo Akaha </p>
    </div>
  </footer>
   </div>
  </footer>
  </body>
</html>
