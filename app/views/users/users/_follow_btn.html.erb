    <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
            <%= link_to "フォローを外す",user_relationships_path(user), method: :delete, class: "btn btn-success btn-block" %>
      <% else %>
            <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-info btn-block" %>
      <% end %>

    <% else %>　<!--current_userの場合はユーザー編集ページへ-->
		    <%= link_to "プロフィール編集", edit_user_path(user), class:"btn btn-primary" %>
	<% end %>