<div class="container mt-2">
     <h4>お気に入り画像</h4>
    <div class="row">

		   <% @like_post_images.each do |post_image| %>
			 <div class="col-md-4 mb-3">
			  <div class="card">
			   <%= link_to post_image_path(post_image) do %>
			   <%= attachment_image_tag post_image, :image, :fill,400,300, format: 'jpeg', class:"img-fluid" %>
         <% end %>
          <!-- いいねボタン -->
         <div id="likes_buttons_<%= post_image.id %>" class="likes_button">
         <%= render partial: 'users/likes/like', locals: {post_image: post_image} %>
         </div>
			  </div>
			 </div>
		   <% end %>

    </div>
</div>