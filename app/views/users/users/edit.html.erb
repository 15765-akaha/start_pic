
  <div class="container">
 
    <h2>ユーザー情報編集</h2>
 

 <div class="flash col-6">
  <%= render partial: 'layouts/flashes' %>
 </div>
  
  <%= form_for(@user) do |f| %>

  <div class="row">
    <div class="col-sm-12">
      <%= f.label :profile_image, "プロフィールイメージ"%><br>
      <%= f.attachment_field :profile_image %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <%= f.label :name, "ニックネーム"%><br>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <%= f.label :introduction, "自己紹介"%>
      <%= f.text_area :introduction, rows:'2', class:"form-control" %>
    </div>
  </div>

    <br>
      <%= f.submit :"変更する", class:"btn btn-primary" %>
      <%= link_to '退会する', withdrow_user_path(@user) , class:"btn btn-danger" %> 
  <% end %>
    
</div>