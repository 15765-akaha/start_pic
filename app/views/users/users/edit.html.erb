<div class="jumbotron jumbotron-user jumbotron-fluid">	
  <div class="container-fluid jumbotron-container"> 
    <%#= attachment_image_tag @user, :profile_image, fallback: 'main.jpg', class: "img-fluid" #%>
  </div>
</div>


  <div class="container">
   <div class="col-6">
    <%= form_for(@user) do |f| %>
    <div class="form-group row">

            <%= f.attachment_field :profile_image %>
    </div>
    <div class="form-group row">
            <%= f.text_field :name %>
    </div>

    <div class="form-group row">
            <%= f.text_area :introduction, rows:'2', class:"form-control" %>
    </div>
            <%= f.submit :"変更する", class:"btn btn-primary" %>
   </div>
    <% end %>

  </div>