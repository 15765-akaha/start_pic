<div class="jumbotron jumbotron-theme jumbotron-fluid">	
  <div class="container-fluid jumbotron-container">
        <h1 class="title ml-5 display-4 text-white">インスピレーションを受ける</h1>
  </div>
</div>

    <div class="container">
      <div class="row align-content-start">
        <div class="card-columns">
                <% @post_images.each do |post_image| %>
                  <div class="card">
                    <%= link_to post_image_path(post_image) do %>
                    <%= attachment_image_tag post_image, :image, format: 'jpeg', class:"img-fluid" %>
                    <% end %>

                    <!-- いいね機能 -->
                    <div id="likes_buttons_<%#= post_image.id %>">
                    <% if post_image.liked_by?(current_user) %>
                      <%= link_to post_image_likes_path(post_image), method: :delete do %>
                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                      <% end %>
                    <% else %>
                      <%= link_to post_image_likes_path(post_image), method: :post do %>
                      <i class="fa fa-heart-o" aria-hidden="true"></i>
                      <% end %>
                    <% end %>
                    </div>
                  </div>
                <% end %>
        </div>
      </div>
    </div>

        