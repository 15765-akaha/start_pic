<div class="container">

<h1>新規投稿</h1>

  <%= form_for(@post_image, url:theme_post_images_path(@theme.id)) do |f| %>

    <div class="row">
      <div class="col-sm-12">
       <%= f.label :image, "投稿画像" %><br>
       <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-5">
       <%= f.label :caption, "投稿コメント" %><br>
       <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメント" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-5">
       <%= f.label :tag_list, "タグ" %><br>
       <%= f.text_field :tag_list, value: @post_image.tag_list.join(','), placeholder:"タグ付け" %>
      </div>
    </div>
    <br>
    <div class="row">
     <div class="col-sm-5">
       <%= f.submit "投稿する" %>
     </div>
  <% end %>
    </div>

</div>