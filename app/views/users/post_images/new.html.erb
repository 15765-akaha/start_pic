<h1>新規投稿</h1>

  <%= form_for(@post_image, url:post_images_path) do |f| %>

    <div class="row">
      <div class="col-sm-12">
       <%= f.attachment_field :image %>
    </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-12">
       <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメント" %>
    </div>
       <%= f.submit "投稿する" %>
  <% end %>
