<div class="jumbotron jumbotron-theme jumbotron-fluid">	
  <div class="container-fluid">
        <h1 class="title ml-5 display-4 text-white"><%= @theme.title %></h1>
         <!-- 投稿メニュー -->
         <div class="theme-menu d-flex ml-5 mt-3">
           <%= link_to "投稿する", new_theme_post_image_path(@theme.id), class:"btn btn-primary btn-sm ml-5" %>
          <% if current_user.id == @theme.create_user_id && @post_images.empty? %>
          <!-- テーマ編集ボタン -->
           <div class="edit-button ml-3">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#e-themeModalCenter">タイトルの編集</button>
           </div>
          <% end %>
         </div>
  </div>
</div>


    <div class="container-fluid">

    <!-- テーマ編集モーダル -->
    <div class="modal fade" id="e-themeModalCenter" tabindex="-1" role="dialog" aria-labelledby="e-themeModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h6 class="modal-title" id="e-themeModalCenterTitle">タイトルの編集<span class="small ml-3">※同じタイトルのテーマに編集できません。</span></h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <div class="row d-flex justify-content-center">
              <%= form_for(@theme, url:theme_path(@theme)) do |f| %>
                <div class="form-group mb-2 form-inline">
                  <%= f.text_field :title, class: "form-control" %>
                  <%= f.submit "変更する", class: "btn btn-primary ml-2" %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="modal-footer">
            <%= link_to "投稿を削除する", theme_path(@theme), method: :delete, class:"btn btn-outline-danger" , data: { confirm: '本当に削除しますか?' } %>
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">閉じる</button>
          </div>
        </div>
      </div>
    </div>

    <!-- 画像コーナー -->
      <%= render partial: 'layouts/flashes' %>
      <div class="row align-content-start">
        <div class="card-columns mx-4">
        
             <% if @post_images.present? %>
              <%= render partial: 'users/post_images/image_index', locals: {post_images: @post_images} %>
             <% else %>
                <h2>まだ投稿がありません。チャレンジしませんか？</h2>
             <% end %>
        </div>
                <%= paginate @post_images %>
      </div>
    </div>

        
