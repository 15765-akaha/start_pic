<div class="jumbotron jumbotron-theme jumbotron-fluid">	
  <div class="container-fluid jumbotron-container">
        <h1 class="title ml-5 display-4 text-white"><%= @theme.title %></h1>
        <%= link_to "投稿する", new_theme_post_image_path(@theme.id), class:"btn btn-primary btn-lg ml-5" %>
  </div>
</div>
    <div class="container">
      <div class="row align-content-start">
        <div class="card-columns">
        
             <% if @post_images.present? %>
                <% @post_images.each do |post_image| %>
                  <div class="card">
                    <%= link_to post_image_path(post_image) do %>
                    <%= attachment_image_tag post_image, :image, format: 'jpeg', class:" card-img img-fluid" %>　
                    <% end %>
                    <% if current_user != post_image.user %>
                    <%= post_image.user.name %>
			              <% end %>

                    <!-- いいねボタン -->
                    <div id="likes_buttons_<%= post_image.id %>" class="likes_button">
                      <%= render partial: 'users/likes/like', locals: {post_image: post_image} %>
                    </div>

                    <!-- ステータス -->
                    <div id="likes_status_<%= post_image.id %>" class="likes_status">
                    <%= render partial: 'users/likes/like_status', locals: {post_image: post_image} %>
                    </div>                    
                  </div>
                <% end %>
             <% else %>
                <h2>まだ投稿がありません。チャレンジしませんか？</h2>
             <% end %>
        </div>
                <%= paginate @post_images %>
      </div>
    </div>

        
