<% if @themes.present? %>
    <% themes.each do |theme| %>
        <div class="col-md-3 col-sm-6 mb-2">
         <div class="card">
            <%= link_to theme_path(theme) do %>
            <%= attachment_image_tag theme.post_images.sample, :image, :fill, 320, 320,format: 'jpeg', fallback: 'no_image.png', class: 'card-img-top' %>　
            <div class="card-body">
             <h5 class="card-title text-muted"><%= theme.title %></h5>
             <h6 class="card-title text-muted">投稿数:<%= theme.post_images.count %>
             </h6>
            <% end %>
            </div>
         </div>
        </div>
    <% end %>
<% else %>
    <p class="nothing-text">お探しのテーマはございません。</p>
<% end %>