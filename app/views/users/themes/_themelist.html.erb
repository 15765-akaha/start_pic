<div class="offset-1 col-10">
	<div class="row d-flex aline-items-center">
		<strong class="px-3 pb-1">テーマ検索</strong>
	</div>
        <%= form_tag(themes_path, method: :get) do %>
        <%= text_field_tag :search %>
        <%= submit_tag :'Search', :name => nil %>
        <% end %>
	    <% themes.each do |theme| %>
		<%= link_to theme_path(theme) do %>
			<div class="row mx-auto mt-3">
			<span class="text-center"><%= theme.title %></span>
			</div>
		<% end %>
	  <% end %>
</div>

<div class="card">
  <div class="card-header" role="tab" id="collapseListGroupHeading1">
    <h5 class="mb-0">
      <a href="#collapseListGroup1" class="collapsed text-body d-block p-3 m-n3" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="collapseListGroup1"> リストで探す </a>
    </h5>
  </div><!-- /.card-header -->
  <div class="collapse" role="tabpanel" id="collapseListGroup1" aria-labelledby="collapseListGroupHeading1" aria-expanded="false">
    <ul class="list-group list-group-flush">
	<% themes.each do |theme| %>
		<%= link_to theme_path(theme) do %>
      <li class="list-group-item"><%= theme.title %></li>
	  	<% end %>
	<% end %>
    </ul>
  </div><!-- /.collapse -->
</div><!-- /.card -->