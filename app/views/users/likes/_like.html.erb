    <% if post_image.liked_by?(current_user) %>
        <%= link_to post_image_likes_path(post_image), method: :delete, remote: true do %>
            <i class="fa fa-heart fa-2x good-heart" aria-hidden="true"></i>
        <% end %>
    <% else %>
        <%= link_to post_image_likes_path(post_image), method: :post, remote: true do %>
            <i class="fa fa-heart-o fa-2x no-heart" aria-hidden="true"></i>
        <% end %>
    <% end %>