<div class="container-fluid my-5">

  <div class="row">
    <div class="offset-md-4 col-md-4">
      <h4>ログイン</h4>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mt-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" ,placeholder:"Email Address"%>
        </div>

        <div class="form-group mt-3">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" ,placeholder:"Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-light btn-block offset-1 col-10 mt-5" %>
        </div>
      <% end %>

        <%= link_to "→ パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "offset-2 col-10" %>
    </div>
  </div>

</div>
