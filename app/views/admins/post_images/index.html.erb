<div class="container my-5">
  <div class="row">
    <h2>投稿画像一覧</h2>
  </div>

  <div class="row mt-3">
   <div class="offset-sm-1 col-sm-10">
    <table class="table table-hover">

      <thead>
        <tr>
          <th>イメージ</th>
          <th>投稿ユーザー名</th>
          <th>投稿日時</th>
          <th>管理</th>
        </tr>
      </thead>

      <tbody>
        <% @post_images.each do |post_image| %>
        <tr>
          <td><%= link_to post_image_path(post_image) do %>
              <%= attachment_image_tag post_image, :image, :fill,100,100, class: "rounded" %></td>
              <% end %>
          <td><%= link_to post_image.user.name, user_path(post_image.user) %>(ユーザーページ)
          <td><%= post_image.created_at.strftime('%Y/%m/%d') %>
          <td><%= link_to '削除する',admins_post_image_path(post_image) , method: :delete, class:"btn btn-danger", data: { confirm: '本当に削除しますか?' } %></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
 </div>


  <div class="row d-flex justify-content-center">
    <%= paginate @post_images %>
  </div>

</div><!--container-->