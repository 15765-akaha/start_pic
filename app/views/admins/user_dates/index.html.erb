<div class="container my-5">
  <div class="row">
    <h2>ユーザー情報一覧</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>投稿数</th>
          <th>ランク</th>
          <th>ステータス</th>
          <th>編集</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user_path(user) do %>
              <%= user.name %>
              <% end %>
            </td>
          <td><%= user.email %></td>
          <td><%= user.post_images.count %>
          <td><%= user.accivement %></td>
          <td><% if user.is_enabled == true %>
              有効会員
              <% else %>
              退会済み
              <% end %>
          </td>
          <td><%= link_to '編集する',edit_admins_user_date_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>


  <div class="container">
    <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
    <%= paginate @users %>
    </div>
    </div>
  </div> 
</div>