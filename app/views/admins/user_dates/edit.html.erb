<div class="container my-5">
  <div class="row">
    <h2>ユーザー編集画面</h2>
  </div>
  <%= render partial: 'layouts/flashes' %>

    <div class="row mt-3 flex-column align-items-center">

      <%= form_for (@user), url: {controler: "admins/user_dates", action: "show" } do |f| %>

        <div class="form-group row">
          <%= f.label :会員id, class: "col-sm-4" %>
          <%= f.label @user.id, class: "col-sm-8" %>
        </div>

        <div class="form-group">
          <%= f.label :プロフィールイメージ %>
          <%= attachment_image_tag @user, :profile_image, :fill,60,60, fallback: 'no_image_user.jpg', size: '60x60', class: "rounded" %><br>
          <%= f.attachment_field :profile_image %>
        </div>

        <div class="form-group row">
          <%= f.label :ニックネーム, class: "col-sm-5" %>
          <%= f.text_field :name, class: "form-control col-sm-7" %>
        </div>

        <div class="form-group row">
          <%= f.label :自己紹介, class: "col-sm-5" %><br>
          <%= f.text_area :introduction, class: "form-control col-sm-7" %>
        </div>

        <div class="row">
          <%= f.label :会員ステータス, class: "ml-3" %>
          <div class="form-check ml-4">
            <%= f.radio_button :is_enabled, :true %>
            <%= f.label :is_enabled, "有効会員" %>
            <%= f.radio_button :is_enabled, :false %>
            <%= f.label :is_enabled, "退会済み" %>
          </div>
        </div>

        <div class="row">
          <%= f.submit "変更を保存する", class: "btn btn-primary mt-3 mx-auto" %>
        </div>

      <% end %>

  </div>
</div>